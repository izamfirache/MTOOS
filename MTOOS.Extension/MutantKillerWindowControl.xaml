<UserControl x:Class="MTOOS.Extension.MutantKillerWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}"
             Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="725"
             Name="MyToolWindow">
        <Grid>
            <DockPanel>
            <Menu DockPanel.Dock="Top" Height="30" VerticalAlignment="Top" Width="225" HorizontalAlignment="Left">
                <MenuItem Height="30" Header="Mutation Analysis" Width="140" Click="MutationAnalysisItem_Click"/>
                <MenuItem Height="30" Header="Compare" Width="80" Click="CompareItem_Click"/>
            </Menu>
        
            <ContentControl x:Name="content" Height="650" DockPanel.Dock="Bottom"/>
        </DockPanel>
    </Grid>
</UserControl>
